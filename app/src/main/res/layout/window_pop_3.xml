<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_NumberPopup_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/tv_NumberPopup_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                android:text="2"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/tv_NumberPopup_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                android:text="3"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_NumberPopup_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/tv_NumberPopup_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                android:text="5"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/tv_NumberPopup_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_NumberPopup_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/tv_NumberPopup_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                android:text="8"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/tv_NumberPopup_9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                android:text="9"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/iv_NumberPopup_Del"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:gravity="center"
                android:background="@color/colorWhite"
                android:text="删除"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_NumberPopup_0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="20pt" />
            <TextView
                android:id="@+id/iv_NumberPopup_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:text="确定"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />




        </LinearLayout>

    </LinearLayout>
</LinearLayout>
